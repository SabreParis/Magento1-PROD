<?php if ($this->getResultCount()): ?>

    <div class="page-title hidden">
        <?php if ($this->helper('rss/catalog')->getTagFeedUrl()): ?>
            <a href="<?php echo $this->helper('rss/catalog')->getTagFeedUrl() ?>"
               class="nobr link-rss"><?php echo $this->__('Subscribe to Feed') ?></a>
        <?php endif; ?>
        <h1 class="hidden"><?php echo ($this->getHeaderText() || $this->getHeaderText() === false) ? $this->getHeaderText() : $this->__("Search results for '%s'", $this->helper('catalogsearch')->getEscapedQueryText()) ?></h1>
    </div>

    <?php echo $this->getChildHtml('catalogsearch.nav.tabs'); ?>
    <?php echo $this->getChildHtml('catalogsearch.leftnav'); ?>
    <?php if ($messages = $this->getNoteMessages()): ?>
        <ul class="messages">
            <li class="notice-msg">
                <ul>
                    <?php foreach ($messages as $message): ?>
                    <li><span><?php echo $message ?></span></li>
                    <?php endforeach; ?>
                </ul>
            </li>
        </ul>
    <?php endif; ?>
    <?php echo $this->getMessagesBlock()->toHtml(); ?>
    <?php echo $this->getProductListHtml(); ?>
<?php else: ?>
    <div class="page-title hidden">
        <h1 class="hidden"><?php echo ($this->getHeaderText() || $this->getHeaderText() === false) ? $this->getHeaderText() : $this->__("Search results for '%s'", $this->helper('catalogsearch')->getEscapedQueryText()) ?></h1>
    </div>
    <?php echo $this->getChildHtml('catalogsearch.nav.tabs'); ?>
    <ul class="messages">
        <li class="notice-msg">
            <ul>
                <li>
                    <span><?php echo ($this->getNoResultText()) ? $this->getNoResultText() : $this->__('Your search returns no results.') ?></span>
                </li>
                <?php if ($this->getAdditionalHtml()): ?>
                    <li><span><?php echo $this->getAdditionalHtml(); ?></span></li><?php endif; ?>
                <?php if ($messages = $this->getNoteMessages()): ?>
                    <?php foreach ($messages as $message): ?>
                        <li><span><?php echo $message ?></span></li>
                    <?php endforeach; ?>
                <?php endif; ?>
            </ul>
        </li>
    </ul>
    <?php echo $this->getMessagesBlock()->toHtml(); ?>
<?php endif; ?>
<script>
    document.getElementById('search_mini_form').style.display = 'inline';
</script>
