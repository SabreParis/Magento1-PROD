<?xml version="1.0" encoding="UTF-8"?>
<config>
    
    <sections>
        <tftexports translate="label" module="tftexports">
            <label>TFT Exports Settings</label>
            <tab>tftorders</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <tftexports_group translate="label" module="tftexports">
                    <label>Configuration Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <tftexports_ip_address translate="label">
                            <label>Your IP Address: </label>
                            <comment>[ multiple IP seperator is : semicolon (;) ]</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tftexports_ip_address>
						
						 <tftexports_download translate="label comment">
                            <label>
                                Export Products
                            </label>
                            <frontend_type>label</frontend_type>
                            <margin_top>0px</margin_top>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[<a href="/tftrequest/productexport/exports/" class="system-download-product" target="_blank">Click here to Export Products</a> <br>
                                        ]]>
                            </comment>
                        </tftexports_download>
                    </fields>
					
                </tftexports_group>
            </groups>
        </tftexports>
    </sections>
</config>